{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "baseUrl": "src",
      "paths": {
        "@ui/*": ["components/ui/*"],
        "@component/*": ["components/component/*"],
        "@page/*": ["pages/*"],
        "@asset/*": ["assets/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }
  